generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String     @unique
  otp       String
  otpExpiry DateTime
  profile   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Favorite  Favorite[]
  Like      Like[]
}

model Blog {
  id        Int        @id @default(autoincrement())
  title     String
  content   String
  picture   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Favorite  Favorite[]
  Like      Like[]
}

model Favorite {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  Blog      Blog     @relation(fields: [blogId], references: [id])
  blogId    Int
  createdAt DateTime @default(now())
}

model Like {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  Blog      Blog     @relation(fields: [blogId], references: [id])
  blogId    Int
  createdAt DateTime @default(now())
}
